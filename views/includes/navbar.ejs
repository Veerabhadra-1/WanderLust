<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
    width: 400px;
    height: 50px;
  }
  .all {
    color: #fe424d !important;
    font-size: 20px;
    margin-left: 40px;
    white-space: nowrap;
  }

  .optionbar a {
    white-space: nowrap; /* prevent breaking into lines */
    margin-left: 10px;
  }

  @media (max-width: 576px) {
    .search-inp {
      width: 100% !important;
      padding: 0.5rem 1rem !important;
    }
    .searchbar form.d-flex {
      flex-direction: column;
      gap: 0.5rem;
    }
    .search-btn {
      width: 100%;
      padding: 0.5rem;
    }
  }

  .navbar-collapse.show {
    background-color: white;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 999;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/listings">
      <span><i class="fa-brands fa-airbnb symbol"></i>
      <p class="para">WanderLust</p></span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left Side -->
      <div class="navbar-nav">
        <a class="nav-link all" href="/listings">All Resorts</a>
      </div>

      <!-- Center: Search Bar -->
      <div class="ms-auto me-auto searchbar">
        <form class="d-flex" role="search" method="get" action="/listings/search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search Category"
            name="search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- Right Side: Options -->
      <div class="navbar-nav optionbar d-flex align-items-center ms-auto">
        <a class="nav-link newresort" href="/listings/new">Add New Resort</a>
        <% if (!currUser) { %>
          <a class="nav-link active signup" href="/signup"><b>Sign up</b></a>
          <a class="nav-link login" href="/login"><b>Login</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link lo" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>